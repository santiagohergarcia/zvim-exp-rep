<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Table selectionChange="handleSelectionChange" id="idApproversTable" mode="SingleSelectMaster" inset="false" 
	items="{detailView>/Approvers}">
		<headerToolbar>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text= "Manager" icon="sap-icon://add-employee" press="handleAddManager" />
				<Button text= "Approver" icon="sap-icon://employee-lookup" press="handleAddAdHocManager" visible="false"/>
				<Button icon="sap-icon://less" press="handleApproverDeleteItem"/>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="{i18n>sequence}"/>
			</Column>
			<Column>
				<Text text="{i18n>approverName}"/>
			</Column>
			<Column>
				<Text text="{i18n>approverID}"/>
			</Column>
			<Column>
				<Text text="{i18n>decision}"/>
			</Column>
			<Column>
				<Text text="{i18n>current}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<Text id="idInputSeq" text="{detailView>Seq}"/>
					<Text id="idInputXuserName" text="{detailView>ApproverName}"/>
					<Text text="{detailView>ApproverID}"/>
					<!--<Input id="idInputXuserApprover" showValueHelp="false" valueHelpRequest="handleApproverValueHelp" 
					placeholder= "Approver ID" value="{detailView>ApproverID}" submit= "handleApproverChange" change="handleApproverChange"/>-->
					<Text text="{Decision}"/>
					<core:Icon src ="{=${Curr} === 'X'?'sap-icon://accept':''}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>